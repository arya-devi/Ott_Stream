<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watch History</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fa;
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar a {
            color: #ffffff;
        }

        .navbar a:hover {
            color: #f8f9fa;
        }

        .container {
            margin-top: 40px;
        }

        h2 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 30px;
            font-weight: bold;
        }

        .table-container {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            padding: 20px;
        }

        .table {
            border-radius: 8px;
            overflow: hidden;
        }

        th,
        td {
            padding: 15px;
            text-align: center;
            font-weight: 500;
        }

        th {
            background: linear-gradient(135deg, #6E7DFF, #00D9F1);
            color: #fff;
            text-transform: uppercase;
        }

        td {
            background-color: #ffffff;
            color: #333;
        }

        tr:nth-child(even) td {
            background-color: #f7f7f7;
        }

        tr:hover td {
            background-color: #f1f1f1;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9fafb;
        }

        .table-hover tbody tr:hover {
            background-color: #e2e6ea;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
            border-radius: 25px;
            padding: 10px 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: bold;
            margin-top: 30px;
            transition: background-color 0.3s ease;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }
    </style>
</head>

<body class="bg-light">

    <%- include('./navbar') %>

    <div class="container mt-4">
        <h2 class="text-center mb-4">Watch History</h2>

        <!-- Back Button -->
        <a href="#" class="btn-back">Go Back</a>

        <!-- Table Container -->
        <div class="table-container mt-4">
            <!-- Watch History Table -->
            <table class="table table-striped table-hover mt-4">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% const history = [
                        { _id: '1', title: 'The Shawshank Redemption', date: '2024-11-01', time: '18:30' },
                        { _id: '2', title: 'The Godfather', date: '2024-11-02', time: '20:00' },
                        { _id: '3', title: 'The Dark Knight', date: '2024-11-03', time: '21:45' },
                        { _id: '4', title: 'Inception', date: '2024-11-04', time: '22:15' }
                    ]; %>

                    <% history.forEach((item, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= item.title %></td>
                            <td><%= item.date %></td>
                            <td><%= item.time %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>
